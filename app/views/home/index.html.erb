
<div class="container py-5">
  <h1 class="text-center mb-5">Project Management Dashboard</h1>

  <!-- Projects Section -->
  <h2 class="mb-4">Projects</h2>
  <div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
    <% @projects.each do |project| %>
      <div class="col">
        <div class="card h-100 border-secondary bg-dark text-white">
          <div class="card-body">
            <h5 class="card-title"><%= project.name %></h5>
            <p class="card-text"><%= truncate(project.description, length: 100) %></p>
            <p class="card-text">
              <span class="badge bg-info text-dark">Status: <%= project.status %></span>
            </p>
            <a href="<%= project_path(project) %>" class="btn btn-outline-light mt-2">Show</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  

  <!-- Tasks Section -->
  <h2 class="mb-4">Tasks</h2>
  <div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
    <% @tasks.each do |task| %>
      <div class="col">
        <div class="card h-100 border-secondary bg-dark text-white">
          <div class="card-body">
            <h5 class="card-title"><%= task.title %></h5>
            <p class="card-text"><%= truncate(task.description, length: 100) %></p>
            <div class="mb-2">
              <span class="badge bg-primary">Status: <%= task.status %></span>
              <span class="badge bg-warning text-dark">Priority: <%= task.priority %></span>
            </div>
            <a href="<%= task_path(task) %>" class="btn btn-outline-light">Show</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Milestones Section -->
  <h2 class="mb-4">Milestones</h2>
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @milestones.each do |milestone| %>
      <div class="col">
        <div class="card h-100 border-secondary bg-dark text-white">
          <div class="card-body">
            <h5 class="card-title"><%= milestone.name %></h5>
            <p class="card-text"><%= truncate(milestone.description, length: 100) %></p>
            <p class="card-text">
              <span class="badge bg-secondary">
                Due: <%= milestone.due_date&.strftime("%b %d, %Y") %>
              </span>
            </p>
            <a href="<%= milestone_path(milestone) %>" class="btn btn-outline-light mt-2">Show</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
