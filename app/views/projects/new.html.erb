<% content_for :title, "New Project" %>

<div class="container d-flex justify-content-center align-items-center mt-3 mb-3" style="min-height: 80vh;">
  <div class="w-100" style="max-width: 800px;">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="text-success mb-0">New Project</h1>
      <%= link_to projects_path, class: "btn btn-secondary" do %>
        <i class="fas fa-arrow-left"></i> Back
      <% end %>
    </div>

    <div class="card shadow rounded">
      <div class="card-body">
        <%= render "form", project: @project %>
      </div>
    </div>
  </div>
</div>
