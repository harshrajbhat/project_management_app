<% content_for :title, "Projects" %>

<div class="container mt-5">
  <% if notice %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="text-primary">Projects</h1>
    <%= link_to new_project_path, class: "btn btn-success" do %>
      <i class="fas fa-plus"></i> New Project
    <% end %>
  </div>

  <div id="projects" class="row row-cols-1 row-cols-md-2 g-4">
    <% @projects.each do |project| %>
      <div class="col">
        <div class="card shadow-sm h-100">
          <div class="card-body">
            <h5 class="card-title"><%= project.name %></h5>
            <p class="card-text"><%= truncate(project.description, length: 100) %></p>
            <%= link_to project_path(project), class: "btn btn-sm btn-outline-primary", title: "Show" do %>
              <i class="fas fa-eye"></i> Show
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
