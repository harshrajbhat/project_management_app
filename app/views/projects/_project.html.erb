<div class="container mt-5">
  <div class="card shadow rounded" id="<%= dom_id project %>">
    <div class="card-header bg-dark text-white">
      <h3><%= project.name %></h3>
    </div>
    <div class="card-body">
      <p>
        <strong>Description:</strong><br>
        <%= project.description %>
      </p>

      <p>
        <strong>Start Date:</strong> <%= project.start_date.strftime("%B %d, %Y") %>
      </p>

      <p>
        <strong>End Date:</strong> <%= project.end_date.strftime("%B %d, %Y") %>
      </p>

      <p>
        <strong>Status:</strong>
        <span class="badge bg-info text-dark"><%= project.status.capitalize %></span>
      </p>

      <p>
        <strong>Created by User ID:</strong> <%= project.user_id %>
      </p>
    </div>

    <div class="mt-4 d-flex gap-3">
      <%= link_to edit_project_path(project), class: "btn btn-sm btn-warning", title: "Edit" do %>
        <i class="fas fa-edit"></i> Edit
      <% end %>

      <%= link_to projects_path, class: "btn btn-sm btn-secondary", title: "Back" do %>
        <i class="fas fa-arrow-left"></i> Back
      <% end %>

      <%= button_to project, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger", title: "Delete" do %>
        <i class="fas fa-trash-alt"></i> Delete
      <% end %>
    </div>
  </div>
</div>
