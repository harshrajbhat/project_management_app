<% content_for :title, "Editing Project" %>

<div class="container d-flex justify-content-center align-items-center mt-3 mb-3">
  <div class="w-100" style="max-width: 800px;">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="text-success">Edit Project</h1>
      <div>
        <%= link_to @project, class: "btn btn-outline-primary me-2" do %>
          <i class="fas fa-eye"></i> Show Project
        <% end %>

        <%= link_to projects_path, class: "btn btn-secondary" do %>
          <i class="fas fa-arrow-left"></i> Back to Projects
        <% end %>
      </div>
    </div>

    <div class="card shadow rounded">
      <div class="card-body">
        <%= render "form", project: @project %>
      </div>
    </div>
  </div>
</div>
