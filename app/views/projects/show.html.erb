  <% if notice %>
    <div class="alert alert-success mt-3">
      <%= notice %>
    </div>
  <% end %>

  <div class="mt-4">
    <%= render @project %>
  </div>

  <div class="mt-4 d-flex gap-3">
    <%= link_to "✏️ Edit this project", edit_project_path(@project), class: "btn btn-warning" %>
    <%= link_to "🔙 Back to projects", projects_path, class: "btn btn-secondary" %>
    <%= button_to "🗑️ Destroy this project", @project, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
  </div>
</div>
