  <% if notice %>
    <div class="alert alert-success mt-3">
      <%= notice %>
    </div>
  <% end %>

  <div class="mt-4">
    <%= render @project %>
  </div>
</div>

<h4 class="mt-4 text-primary">Tasks for this Project</h4>

<% if @tasks.any? %>
  <div class="list-group mt-2">
    <% @tasks.each do |task| %>
      <div class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <strong><%= task.title %></strong><br>
          <small><%= truncate(task.description, length: 100) %></small>
        </div>
        <div>
          <%= link_to task_path(task), class: "btn btn-sm btn-outline-primary", title: "View Task" do %>
            <i class="fas fa-eye"></i>show
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="text-muted">No tasks found for this project.</p>
<% end %>
