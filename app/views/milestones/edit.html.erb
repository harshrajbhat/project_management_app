<% content_for :title, "Editing Milestone" %>

<div class="container mt-3 mb-3 w-100" style="max-width: 800px;">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-primary">Edit Milestone</h1>
    <div>
      <%= link_to @milestone, class: "btn btn-outline-primary me-2" do %>
        <i class="bi bi-eye"></i> Show Milestone
      <% end %>
      <%= link_to milestones_path, class: "btn btn-secondary" do %>
        <i class="bi bi-arrow-left"></i> Back to Milestones
      <% end %>
    </div>
  </div>

  <div class="card shadow rounded">
    <div class="card-body">
      <%= render "form", milestone: @milestone %>
    </div>
  </div>
</div>
