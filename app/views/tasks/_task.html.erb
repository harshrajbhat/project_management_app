<!-- _task.html.erb partial -->
<div class="card mb-3 shadow-sm">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0"><%= task.title %></h5>
    <span class="badge <%= task.status == 'Completed' ? 'bg-success' : (task.status == 'In Progress' ? 'bg-warning' : 'bg-secondary') %>">
      <%= task.status %>
    </span>
  </div>
  <div class="card-body">
    <p class="card-text"><%= task.description %></p>
    
    <div class="row mt-3">
      <div class="col-md-6">
        <small class="text-muted d-block mb-1">
          <i class="bi bi-calendar"></i> Due: <%= task.due_date %>
        </small>
        <small class="text-muted d-block mb-1">
          <i class="bi bi-exclamation-circle"></i> Priority: 
          <span class="<%= task.priority == 'High' ? 'text-danger' : (task.priority == 'Medium' ? 'text-warning' : 'text-info') %>">
            <%= task.priority %>
          </span>
        </small>
      </div>
      <div class="col-md-6">
        <small class="text-muted d-block mb-1">
          <i class="bi bi-briefcase"></i> Project: <%= task.project_id %>
        </small>
        <small class="text-muted d-block">
          <i class="bi bi-person"></i> Assigned to: <%= task.user_id %>
        </small>
      </div>
    </div>
  </div>
</div>