<!-- _task.html.erb partial -->
<div class="card mx-2 my-2">
  <div class="card-body p-3">
    <div class="d-flex justify-content-between align-items-start mb-2">
      <span class="badge <%= task.priority == 'High' ? 'bg-danger' : (task.priority == 'Medium' ? 'bg-warning' : 'bg-info') %> me-2">
        <%= task.priority %>
      </span>
      <small class="text-muted">
        <i class="fas fa-calendar-alt me-1"></i><%= task.due_date %>
      </small>
    </div>
    
    <h6 class="card-title mb-2">
      <%= link_to task.title, task, class: "text-decoration-none" %>
    </h6>

    <p class="card-text small text-muted mb-3">
      <%= truncate(task.description, length: 60) %>
    </p>
  
    <div class="d-flex justify-content-between align-items-end">
      <div>
        <% if task.project_id %>
          <small class="d-flex align-items-center text-muted">
            <i class="fas fa-folder me-1"></i><%= task.project_id %>
          </small>
        <% end %>
      </div>
      <div>
      
        <% if task.user_id %>
          <small class="d-flex align-items-center text-muted">
            <i class="fas fa-user me-1"></i><%= task.user_id %>
          </small>
        <% end %>
      </div>
    </div>

      <div class="text-end px-1 pb-2 mt-1">
        <% unless current_page?(task_path(task)) %>
          <%= link_to task, class: "btn btn-sm btn-outline-primary" do %>
            <i class="fas fa-eye me-1"></i> Show this task
          <% end %>
        <% end %>
      </div>
    </div>
</div>