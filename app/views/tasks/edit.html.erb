<% content_for :title, "Editing Task" %>

<div class="container mt-3 mb-3 w-100" style="max-width: 800px;">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-primary">Edit Task</h1>
    <div>
      <%= link_to @task, class: "btn btn-outline-primary me-2" do %>
        <i class="bi bi-eye"></i> Show Task
      <% end %>
      <%= link_to tasks_path, class: "btn btn-secondary" do %>
        <i class="bi bi-arrow-left"></i> Back to Tasks
      <% end %>
    </div>
  </div>

  <div class="card shadow rounded">
    <div class="card-body">
      <%= render "form", task: @task %>
    </div>
  </div>
</div>
