<%= form_with(model: task) do |form| %>
  <% if task.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.select :status, Task.statuses.keys.map { |s| [s.titleize, s] }, prompt: "Select status" %>
  </div>

  <div>
    <%= form.label :due_date, style: "display: block" %>
    <%= form.datetime_field :due_date %>
  </div>

  <div>
    <%= form.label :priority, style: "display: block" %>
    <%= form.select :priority, Task.priorities.keys.map { |p| [p.titleize, p] }, prompt: "Select priority" %>
  </div>

  <div>
    <%= form.label :project_id, style: "display: block" %>
    <%= form.select :project_id, Project.all.map { |p| ["#{p.name} (##{p.id})", p.id] }, prompt: "Select project" %>
  </div>

  <div>
    <%= form.label :user_id, "Assigned To", style: "display: block" %>
    <%= form.select :user_id, User.all.map { |u| ["#{u.name} (#{u.email})", u.id] }, prompt: "Select user" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
