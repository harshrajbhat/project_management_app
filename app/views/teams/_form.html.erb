<%= form_with(model: team) do |form| %>
  <% if team.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(team.errors.count, "error") %> prohibited this team from being saved:</h2>

      <ul>
        <% team.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :project_id, style: "display: block" %>
    <%= form.select :project_id, Project.all.map { |p| ["#{p.name} (##{p.id})", p.id] }, prompt: "Select project" %>
  </div>

  <div>
    <%= form.label :user_id, "Team Member", style: "display: block" %>
    <%= form.select :user_id, User.all.map { |u| ["#{u.name} (#{u.email})", u.id] }, prompt: "Select user" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
