<div class="container py-4">
  <% if notice.present? %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="card shadow">
    <div class="card-header bg-light d-flex justify-content-between align-items-center">
      <h4 class="mb-0">Team Details</h4>
    </div>

    <div class="card-body">
      <%= render @team %>
    </div>

    <div class="card-footer bg-white d-flex justify-content-between">
      <div>
        <%= link_to teams_path, class: "btn btn-outline-secondary" do %>
          <i class="fas fa-arrow-left"></i> Back to Teams
        <% end %>
      </div>

      <% if current_user.role == 'manager' %>
      <div class="d-flex gap-2">
        <%= link_to edit_team_path(@team), class: "btn btn-outline-primary", title: "Edit" do %>
          <i class="fas fa-pencil"></i>
        <% end %>

        <%= button_to @team, method: :delete, class: "btn btn-outline-danger", form: { data: { turbo_confirm: "Are you sure?" } }, title: "Delete" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>
