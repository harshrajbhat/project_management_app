<div class="row d-flex justify-content-center">
  <div class="col-12 col-md-6 col-lg-5">
    <div class="card shadow-sm" style="border-radius: 1rem;">
      <div class="card-body p-4">

        <div class="d-flex align-items-center mb-3 pb-1 justify-content-center">
          <i class="fas fa-project-diagram me-2" style="color: #ff6219;"></i>
          <span class="h2 fw-bold mb-0">PlanCraft</span>
        </div>

        <h5 class="fw-normal mb-3 text-center" style="letter-spacing: 1px;">Forgot your password?</h5>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-outline mb-4">
            <%= f.label :email, "Email address", class: "form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg" %>
          </div>

          <div class="mb-3 d-grid">
            <%= f.submit "Send reset instructions", class: "btn btn-dark btn-lg" %>
          </div>
        <% end %>

        <div class="text-center text-muted small" >
          <%= render "devise/shared/links" %>
        </div>

      </div>
    </div>
  </div>
</div>
