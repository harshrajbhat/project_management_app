<div class="row d-flex justify-content-center">
  <div class="col-12 col-md-6 col-lg-5">
    <div class="card shadow-sm" style="border-radius: 1rem;">
      <div class="card-body p-4">
        
        <div class="d-flex align-items-center mb-3 pb-1 justify-content-center">
          <i class="fas fa-project-diagram me-2" style="color: #ff6219;"></i>
          <span class="h2 fw-bold mb-0">PlanCraft</span>
        </div>        
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-outline mb-4">
            <%= f.label :email, "Email address", class: "form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg" %>
          </div>

          <div class="form-outline mb-4">
            <%= f.label :password, class: "form-label" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-check mb-4">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, class: "form-check-label" %>
            </div>
          <% end %>

          <div class="mb-3 d-grid">
            <%= f.submit "Login", class: "btn btn-dark btn-lg" %>
          </div>
        <% end %>

        <div class="text-center">
          <%= link_to "Forgot password?", new_user_password_path, class: "small text-muted" %>
        </div>
        
      </div>
    </div>
  </div>
</div>
